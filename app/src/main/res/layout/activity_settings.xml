<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mpvreeken.rpgcompanion.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Settings"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/settings_external_link_alert_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display External Link Alert Warnings" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upon clicking a link that would take you out of the app to a link submitted by another user, you may choose to view the link url before being sent to the webpage, or you can choose to skip the alert and be sent directly to the url without any warning." />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
